<h2 id='current-user'><%= current_user.first_name %>'s Saved Places</h2>

<% if flash[:notice] %>
    <p class='notice'><%= flash[:notice] %></p>
<% end %>

<p>	
	<%= link_to 'Edit Profile', edit_user_path %> |  
	<%= link_to 'Back', root_path %> | 
	<%= link_to 'Logout', logout_path, method: :delete %>
</p>


<section id='profile-results'>
	<% @user.businesses.each do |business| %>
		<% biz = Business.biz_search(business.yelp_id) %>

		<div class='business'>
			<h2><%= biz[:name] %></h2>
			<ul class='profile-address' data-lat='<%= biz[:latitude] %>' data-long='<%= biz[:longitude] %>'>
				<% biz[:address].each do |address| %>
					<li><%= address %></li>
				<% end %>
		</ul>
			<p><%= biz[:phone_number] %></p>
			<p><%= link_to biz[:name], biz[:website], :target => '_blank' %> on <b>Yelp</b></p>
			<div>
				<span><b>Yelp Rating: </b>
					<span id='yelp-rating'><%= biz[:rating] %></span>
				</span>
			</div>
		</div>
		<%#= hidden_field :business_id, :value => '#{business.id}' %>
		<%#= form_tag(remove_business_from_user_path(@user), method: 'post') %>
		<!-- <input type='submit' value='Delete'> -->

	<% end %>

	<% @user.markets.each do |market| %>
		<div class='market'>
			<h2><%= market.name %></h2>
			<p>Day(s) open: <%= market.days_open %></p>
			<p>Hours: <%= market.hours %></p>
			<p>Location: <%= market.address %></p>
			<p><%= market.borough %></p>
		</div>	
	<% end %>
</section>
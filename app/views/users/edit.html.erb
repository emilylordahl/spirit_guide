<h2>Edit Profile</h2>
<%= form_for @user do |f| %>
	
	<%= f.label :first_name %><br>
	<%= f.text_field :first_name %><br>
<br>
	<%= f.label :last_name %><br>
	<%= f.text_field :last_name %><br>
<br>
	<%= f.label :email %><br>
	<%= f.text_field :email %><br>
<br>
	<%= f.submit 'Update' %><br>

<% end %>

<br>
<%= link_to 'Delete Account', user_path(@user), method: :delete %>
<h2>Login</h2>

<% if flash[:notice] %>
    <p class='notice'><%= flash[:notice] %></p>
<% end %>

<%= form_tag '/sessions' do %>

	<%= label_tag :email %><br>
	<%= text_field_tag :email %><br>
<br>
	<%= label_tag :password %><br>
	<%= password_field_tag :password %><br>
<br>
	<%= submit_tag 'Login' %><br>

<% end %>